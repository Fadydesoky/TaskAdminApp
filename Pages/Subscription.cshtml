@page
@model TaskAdmin.Pages.Pages_Subscription
@{
    ViewData["Title"] = "Subscription Details";
}

@* تضمين الخطوط الحديثة و FontAwesome *@
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<div class="subscription-container">
    <div class="subscription-header">
        <h1>@ViewData["Title"]</h1>
        <p class="lead">Last updated: @DateTime.Now.ToString("MMMM dd, yyyy")</p>
    </div>

    <div class="subscription-content">
        <section class="intro mb-5 fade-in-up">
            <h2 class="section-title">Introduction</h2>
            <p>We offer many bundles with great discounts just for our special users, along with a selection of free services that will enhance your experience.</p>
        </section>

        <section class="offers mb-5 fade-in-up">
            <h2 class="section-title">Exclusive Offers</h2>
            <ul>
                <li><i class="fas fa-gift"></i> Offer 1: 1 month and 2 months free = <strong>$2</strong></li>
                <li><i class="fas fa-gift"></i> Offer 2: 2 months and half a year = <strong>$10</strong></li>
                <li><i class="fas fa-gift"></i> Offer 3: CHATGPT 4.5 access and 1-year subscription = <strong>$25</strong></li>
            </ul>
        </section>

        <section class="why-subscribe mb-5 fade-in-up">
            <h2 class="section-title">Why Choose Our Subscription?</h2>
            <p>This tool is constantly evolving with regular updates to provide you with the best experience. It will become your reliable companion!</p>
        </section>

        <section class="text-center mt-4">
            <a  class="btn btn-primary btn-lg" onclick={alert("subscribed")}>
                <i class="fas fa-arrow-right"></i> Subscribe Now
            </a>
        </section>
    </div>
</div>

<script>
    // Function to determine if it's day or night
    function getTimeOfDay() {
        const hour = new Date().getHours();
        return (hour >= 18 || hour < 6) ? 'dark' : 'light'; // From 6 PM to 6 AM, it's dark
    }

    // Apply the dark or light theme based on the time of day
    document.addEventListener("DOMContentLoaded", function() {
        const theme = getTimeOfDay();
        if (theme === 'dark') {
            document.body.classList.add('dark-mode');
        } else {
            document.body.classList.add('light-mode');
        }

        // Optional: Apply fade-in effect
        const elements = document.querySelectorAll(".fade-in-up");
        elements.forEach((el, index) => {
            setTimeout(() => {
                el.classList.add("visible");
            }, index * 300);
        });
    });
</script>

